<div class="FirstDiv">
         <h1 class="Jobly">Jobly</h1>
         <h2 class="Text4">Crea una cuenta</h2>
         <form class="Form" action="" id="Formulario" method="POST">
            <input type="text" name="Usuario" class="Usuario" placeholder=" Usuario" required>
            <input type="text" name="Email" style="outline: none;" class="Email" placeholder=" Correo electrónico" required>
            <input type="text" name="Clave" class="Contraseña" placeholder=" Contraseña" required>
            <button type="submit" class="Registarse">Registrarse</button>
            <a href="/login" class="Login">¿Ya tienes una cuenta?</a>
         </form>

         {{#if error}}
           <p style="color: red;">*{{error}}</p>
         {{/if}}
</div>